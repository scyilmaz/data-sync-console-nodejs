# Environment Configuration
NODE_ENV=development

# Local Database Configuration
DB_LOCAL_SERVER=your_local_server_ip
DB_LOCAL_DATABASE=your_local_database
DB_LOCAL_USER=your_db_user
DB_LOCAL_PASSWORD=your_db_password
DB_LOCAL_PORT=1433
DB_LOCAL_TIMEOUT=120000

# Cloud Database Configuration  
DB_CLOUD_SERVER=your_cloud_server_ip
DB_CLOUD_DATABASE=your_cloud_database
DB_CLOUD_USER=your_cloud_db_user
DB_CLOUD_PASSWORD=your_cloud_db_password
DB_CLOUD_PORT=1433
DB_CLOUD_TIMEOUT=120000

# Email Configuration
# Gmail için uygulama şifresi kullanın: https://support.google.com/accounts/answer/185833
# Gönderen email ayarları
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password

# Gönderen bilgileri
EMAIL_FROM_NAME=Data Sync Console
EMAIL_FROM=your_email@gmail.com

# Email Recipients (virgülle ayırın)
EMAIL_ERROR_RECIPIENTS=admin@company.com,dev@company.com
EMAIL_REPORT_RECIPIENTS=admin@company.com,manager@company.com
EMAIL_SUMMARY_RECIPIENTS=admin@company.com

# Application Configuration
LOG_LEVEL=info
LOG_FILE=logs/data-sync-console.log
SYNC_DAYS_BACK=15
